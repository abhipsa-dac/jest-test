{
  "bail": 1,
  "verbose": true,
  "roots": ["<rootDir>"],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)?$",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "collectCoverage": true,
  "clearMocks": true,
  "coverageDirectory": "coverage"
}
